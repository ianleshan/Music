<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/now_playing_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    app:cardCornerRadius="0dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:id="@+id/now_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 1 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <verendus.leshan.music.views.SquaredImageView
                android:id="@+id/now_playing_albumart"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_art" />


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/now_playing_preview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0"
        android:background="@color/card_background"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<com.gc.materialdesign.views.ProgressBarDeterminate
                android:id="@+id/now_playing_preview_progress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/accent">

            </com.gc.materialdesign.views.ProgressBarDeterminate>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/now_playing_preview_play_pause"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/now_playing_preview_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="1dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:text="Infra Turbo Pigcart Racer"
                    android:textColor="@color/text_color"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/now_playing_preview_artist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="1dp"
                    android:singleLine="true"
                    android:text="Deadmau5"
                    android:textColor="@color/detail_color"
                    android:textSize="14sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/now_playing_preview_play_pause"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:padding="15dp"
                android:src="@drawable/ic_pause"
                android:tint="@color/text_color" />

        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
