<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Honeymoon"
        android:textSize="24sp"
        android:padding="5dp"
        android:textColor="@color/text_color"
        android:id="@+id/album_view_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="0"
            android:src="@mipmap/ic_launcher"
            android:padding="5dp"
            android:id="@+id/album_view_artist_icon"
            app:riv_corner_radius="64dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:text="Lana Del Rey"
                android:id="@+id/album_view_artist"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015 . 14 songs"
                android:textColor="@color/text_color"
                android:id="@+id/album_view_album_info"/>

        </LinearLayout>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="0"
            android:padding="18dp"
            android:tint="@color/text_color"
            android:src="@mipmap/ic_more" />

    </LinearLayout>


</LinearLayout>