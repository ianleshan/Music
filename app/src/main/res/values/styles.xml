<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Custo
        mize your theme here. -->

        <item name="morphButtonStyle">@style/Widget.MorphButton</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Custo
        mize your theme here. -->

        <item name="morphButtonStyle">@style/Widget.MorphButton</item>

    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/detail</item>
    </style>


    <style name="FabShuffleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:src">@mipmap/ic_shuffle</item>
    </style>
    
    <style name="CardStyle">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/card_padding</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>

    </style>

    <style name="CardStyleMinimal">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">#00000000</item>

    </style>

    <style name="UnboundedRipple">

    </style>
        
        


</resources>
